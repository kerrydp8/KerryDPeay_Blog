<body id="scale">

    @if (User.IsInRole("Admin"))
    {
        <!--Navbar-->
        <ul>
            <li><a class="active" href="@Url.Action("Index", "BlogPosts")">Home</a></li>
            <li><a href="@Url.Action("LogOff", "Account")">Logout</a></li>
            <li><a href="@Url.Action("Contact", "Home")">Contact Me</a></li>
            <li><a href=@Url.Action("AllPosts", "BlogPosts")>Old Posts</a></li>
            <li><a href=@Url.Action("Create", "BlogPosts")>Create Post</a></li>
        </ul>
    }

    @if ((User.Identity.IsAuthenticated) && !(User.IsInRole("Admin")))
    {
        <!--Navbar-->
        <ul>
            <li><a class="active" href="@Url.Action("Index", "BlogPosts")">Home</a></li>
            <li><a href="@Url.Action("LogOff", "Account")">Logout</a></li>
            <li><a href="@Url.Action("Contact", "Home")">Contact Me</a></li>
            <li><a href=@Url.Action("AllPosts", "BlogPosts")>Old Posts</a></li>
        </ul>
    }

    @if (!(User.Identity.IsAuthenticated))
    {
        <!--Navbar-->

        <ul>
            <li><a class="active" href="@Url.Action("Index", "BlogPosts")">Home</a></li>
            <li><a href="@Url.Action("Login", "Account")">Login</a></li>
            <li><a href="@Url.Action("Contact", "Home")">Contact Me</a></li>
            <li><a href=@Url.Action("AllPosts", "BlogPosts")>Old Posts</a></li>
        </ul>
    }

    <br />

    @using (Html.BeginForm("Index", "BlogPosts", FormMethod.Get, htmlAttributes: new { @class = "form" }))
    {<div class="controls controls-row search-row">
            <input id="searchStr" name="searchStr" class="input-block-level" type="text" placeholder="Search">
            <button id="searchStr" name="searchStr" class="btn btn-primary" type="submit">
                <i class="icon-search"></i>
            </button>
        </div>}

    <br />

    <!-- Main Content -->
    <div class="container">
        <div class="row text-left">
            <div class="col-lg-8 col-md-10 mx-auto">

                <!--<h2 class="text-center"><u><font color="black">Recent Posts</font></u></h2>-->

                @if (User.IsInRole("Admin"))
                {
                    foreach (var post in Model)
                    {
                        <div class="post-preview">

                            <a href="@Url.Action("Details", "BlogPosts", new { Slug = post.Slug })">
                                <!--Searches for a particular post and returns its Details by Slug-->
                                <!--<a href="post.html">-->

                                @if (@post.MediaURL != null)
                                {
                                    <img class="img-responsive" src="@post.MediaURL" alt="image">
                                }

                                <h2 class="post-title"> @post.Title </h2>
                                <h3 class="post-subtitle">
                                    @post.Abstract
                                </h3>
                            </a>

                            <p class="post-meta">
                                Posted by
                                <a href="#">Kerry Peay's Blog</a>
                                on September 24, 2017
                            </p>
                            @Html.ActionLink("Edit", "Edit", new { id = post.Id }) <img src="https://static.thenounproject.com/png/8975-200.png" style="width:20px; height:20px" /> |
                            @Html.ActionLink("Details", "Details", new { Slug = post.Slug }) <img src="https://directmailout.com/wp-content/uploads/2018/05/list.png" style="width:20px; height:20px" /> |
                            @Html.ActionLink("Delete", "Delete", new { id = post.Id }) <img src="http://cdn.onlinewebfonts.com/svg/img_198571.png" style="width:20px; height:20px" /> |
                        </div>
                        <hr>
                    }
                }

                else
                {
                    foreach (var post in Model)
                    {
                        <div class="post-preview">

                            <a href="@Url.Action("Details", "BlogPosts", new { Slug = post.Slug })">
                                <!--Searches for a particular post and returns its Details by Slug-->
                                <!--<a href="post.html">-->

                                @if (@post.MediaURL != null)
                                {
                                    <img class="img-responsive" src="@post.MediaURL" alt="image">
                                }

                                <h2 class="post-title"> @post.Title </h2>
                                <h3 class="post-subtitle">
                                    @post.Abstract
                                </h3>
                            </a>

                            <p class="post-meta">
                                Posted by
                                <a href="#">Kerry Peay's Blog</a>
                                on September 24, 2017
                            </p>

                            @Html.ActionLink("Details", "Details", new { Slug = post.Slug }) <img src="https://directmailout.com/wp-content/uploads/2018/05/list.png" style="width:20px; height:20px" />

                        </div>
                        <hr>
                    }
                }

                <p>@Html.PagedListPager(Model, page => Url.Action("Index", new { page, searchStr = ViewBag.Search }))</p>
                <!-- Pager -->
            </div>
        </div>
    </div>

    <hr>

    <!-- Footer -->
    <footer>
        <div class="container">
            <p class="copyright text-muted">Copyright &copy; Your Website 2017</p>
        </div>
    </footer>

    <!-- Bootstrap core JavaScript -->
    <!--<script src="vendor/jquery/jquery.min.js"></script>-->
    <!--<script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>-->

    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>

    <!-- Custom scripts for this template -->
    <!--<script src="js/clean-blog.min.js"></script>-->
    <link href="~/Scripts/clean-blog.min.css" rel="stylesheet" />


</body>

